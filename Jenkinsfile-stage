pipeline {
    agent any
    stages {
        stage('Git Clone'){
            steps {
                checkout scm
            }
        }
        stage('Deploy') { 
            steps { 
                dir("helmfile") {
                    script { 
                        sh("helmfile -e stage apply")
                    }
                } 
            } 
        }
    }
    post { 
        always { 
            cleanWs()
        }
    }
}